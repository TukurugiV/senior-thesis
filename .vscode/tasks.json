{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build PDF with Pandoc",
      "type": "shell",
      "command": "pandoc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.pdf",
        "--pdf-engine=xelatex",
        "--lua-filter=v:/卒研関係/pandoc/mermaid.lua",
        "--lua-filter=v:/卒研関係/pandoc/paper-filter.lua",
        "--filter=pandoc-crossref",
        "--citeproc",
        "--bibliography=v:/卒研関係/references.bib",
        "--csl=v:/卒研関係/japanese-reference.csl",
        "--lua-filter=v:/卒研関係/pandoc/cite-superscript.lua",
        "--number-sections",
        "-V", "mainfont=Harano Aji Mincho",
        "-V", "geometry:top=30mm,bottom=30mm,left=20mm,right=20mm",
        "--include-in-header=v:/卒研関係/pandoc/header.tex"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
